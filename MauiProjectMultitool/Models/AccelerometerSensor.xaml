<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiProjectMultitool.Models.AccelerometerSensor">
    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource SensorLight}, Dark={StaticResource SensorDark}}"
       CornerRadius="10"
       HasShadow="True">
        <StackLayout>
            <Label 
                Text="{Binding Name}" 
                HorizontalOptions="Center"/>
            <Label x:Name="AccelLabel"
                Text="Accelerometer not active"
                TextColor="LightGray"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </StackLayout>
    </Frame>
</ContentView>
